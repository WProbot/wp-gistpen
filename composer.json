{
  "name": "maadhattah/wp-gistpen",
  "description": "A self-hosted alternative to putting your code snippets on Gist.",
  "license": "GPL-2.0+",
  "homepage": "http://jamesdigioia.com/wp-gistpen/",
  "authors": [
    {
      "name": "James DiGioia",
      "email": "jamesorodig@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "composer/installers": "v1.0.12",
    "webdevstudios/cmb2": "2.0.0.9",
    "knplabs/github-api": "~1.4",
    "wpupdatephp/wp-update-php": "~1.0",
    "intraxia/jaxion": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "4.3.*",
    "mockery/mockery": "0.9.2",
    "10up/wp_mock": "0.1.*",
    "scrutinizer/ocular": "~1.1",
    "squizlabs/php_codesniffer": "~2.3",
    "intraxia/codestyle": "dev-master"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Intraxia\\Gistpen\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Intraxia\\Gistpen\\Test\\": "test/unit/"
    }
  },
  "config": {
    "vendor-dir": "lib"
  },
  "extra": {
    "installer-paths": {
      "lib/{$name}/": ["webdevstudios/cmb2"]
    }
  },
  "scripts": {
    "test": "phpunit",
    "sniff": "phpcs -s --runtime-set installed_paths vendor/wp-coding-standards/wpcs  -p src/ --standard=vendor/intraxia/codestyle/ruleset.xml --report=full",
    "clean": "phpcbf --runtime-set installed_paths vendor/wp-coding-standards/wpcs -p src/ --standard=vendor/intraxia/codestyle/ruleset.xml --report=full",
    "upload": "ocular code-coverage:upload --format=php-clover build/logs/clover.xml"
  }
}
