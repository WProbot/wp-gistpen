<div class="table" data-brk-container="settingsJobs">
    <h3 class="title">{{i18n "jobs.title"}}</h3>

    <table class="widefat striped">
        <thead>
        <tr>
            <th>{{i18n "jobs.name"}}</th>
            <th>{{i18n "jobs.description"}}</th>
            <th>{{i18n "jobs.status"}}</th>
            <th>{{i18n "jobs.runs"}}</th>
            <th>{{i18n "jobs.dispatch"}}</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>{{i18n "jobs.name"}}</th>
            <th>{{i18n "jobs.description"}}</th>
            <th>{{i18n "jobs.status"}}</th>
            <th>{{i18n "jobs.runs"}}</th>
            <th>{{i18n "jobs.dispatch"}}</th>
        </tr>
        </tfoot>
        <tbody>
        {{#each jobs}}
            {{> components/jobs/row}}
        {{/each}}
        </tbody>
    </table>
</div>
