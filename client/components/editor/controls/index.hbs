<div class="wpgp-editor-controls wpgp-editor-controls-{{editor.theme}}" data-brk-container="controls">
    <div class="wpgp-editor-control">
        <label for="wpgp-editor-status">{{i18n "editor.status"}}: </label>
        <select id="wpgp-editor-status" data-brk-onchange="onStatusChange">
            {{#each editor.statuses}}
                <option value="{{@key}}"
                        {{#compare @key editor.status}}selected{{/compare}}>
                    {{this}}
                </option>
            {{/each}}
        </select>
    </div>

    <div class="wpgp-editor-control">
        <label for="wpgp-editor-sync">{{i18n "editor.sync"}}</label>
        <input type="checkbox" id="wpgp-editor-sync"
               {{#compare editor.sync "on"}}checked{{/compare}}
               data-brk-onchange="onSyncToggle" />
    </div>

    <div class="wpgp-editor-control">
        <label for="wpgp-editor-theme">{{i18n "editor.theme"}}: </label>
        <select id="wpgp-editor-theme" data-brk-onchange="onThemeChange">
            {{#each editor.themes}}
                <option value="{{@key}}"
                        {{#compare @key editor.theme}}selected{{/compare}}>
                    {{this}}
                </option>
            {{/each}}
        </select>
    </div>

    <div class="wpgp-editor-control">
        <label for="wpgp-enable-tabs">{{i18n "editor.tabs"}} </label>
        <input type="checkbox" id="wpgp-enable-tabs"
                {{#compare editor.tabs "on"}}checked{{/compare}}
                data-brk-onchange="onTabsToggle">
    </div>

    <div class="wpgp-editor-control">
        <label for="wpgp-editor-width">{{i18n "editor.width"}}: </label>
        <select id="wpgp-editor-width" data-brk-onchange="onWidthChange">
            {{#each editor.widths}}
                <option value="{{this}}"
                        {{#compare this editor.width}}selected{{/compare}}>
                    {{this}}
                </option>
            {{/each}}
        </select>
    </div>

    <div class="wpgp-editor-control">
        <label for="wpgp-enable-invisibles">{{i18n "editor.invisibles"}} </label>
        <input type="checkbox" id="wpgp-enable-invisibles"
                {{#compare editor.invisibles "on"}}checked{{/compare}}
                data-brk-onchange="onInvisiblesToggle">
    </div>

    <div class="wpgp-editor-control">
        <button class="dashicons-before wpgp-button wpgp-button-update"
                data-brk-onclick="onUpdateClick">
            {{i18n "editor.update"}}
        </button>
        <button class="dashicons-before wpgp-button wpgp-button-add"
                data-brk-onclick="onAddClick">
            {{i18n "editor.file.add"}}
        </button>
        <a href="{{link "wpgp_route" "commits"}}"
           class="dashicons-before wpgp-button wpgp-button-add">
            {{i18n "editor.commits"}}
        </a>
        {{#if repo.gist_url}}
            <a href="{{repo.gist_url}}"
               class="dashicons-before wpgp-button wpgp-button-add">
                {{i18n "editor.gist"}}
            </a>
        {{/if}}
        {{!--<span class="spinner" data-wpgp-spinner></span>--}}
    </div>
</div>
