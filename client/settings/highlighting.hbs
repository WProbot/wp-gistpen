<div class="table">
    <h3 class="title">Syntax Highlighting Settings</h3>
    <table class="form-table">
        <tbody>
        <tr>
            <th>
                <label for="wpgp-theme">Choose Theme</label>
            </th>
            <td>
                <select name="wpgp-theme" id="wpgp-theme"></select>
            </td>
        </tr>
        <tr>
            <th>
                <label for="wpgp-line-numbers">Enable Line Numbers</label>
            </th>
            <td>
                <input type="checkbox" name="wpgp-line-numbers" id="wpgp-line-numbers" />
            </td>
        </tr>
        <tr>
            <th>
                <label for="wpgp-show-invisibles">Enable Show Invisibles</label>
            </th>
            <td>
                <input type="checkbox" name="wpgp-show-invisibles" id="wpgp-show-invisibles" />
            </td>
        </tr>
        </tbody>
    </table>
</div>
